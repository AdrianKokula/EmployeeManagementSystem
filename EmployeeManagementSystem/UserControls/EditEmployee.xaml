<UserControl x:Class="EmployeeManagementSystem.UserControls.EditEmployee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeeManagementSystem.UserControls"
             mc:Ignorable="d" Background="#333b41" Foreground="White"
             d:DesignHeight="175" d:DesignWidth="800">
    <Grid>

		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" Background="#E99454">

			<StackPanel Orientation="Horizontal" Margin="7">
				<Image Source="../Resources/Employee.png" MaxHeight="32" Margin="5 0"/>
				<TextBlock Grid.Column="1" FontSize="20" Text="Employees - edit existing" VerticalAlignment="Center" Foreground="White"/>
			</StackPanel>

		</Grid>

		<Grid Grid.Row="1">

			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="1*" />
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="1*" />
				<RowDefinition Height="1*" />
			</Grid.RowDefinitions>
			
			<StackPanel Grid.Column="0" Margin="10 5">

				<TextBlock Text="First name: " VerticalAlignment="Center"/>
				<TextBox Name="TbFirstName" Padding="3" Background="#1C4857" BorderThickness="0" Foreground="White" FontSize="16" />

			</StackPanel>

			<StackPanel Grid.Column="1" Margin="10 5">

				<TextBlock Text="Last name: " VerticalAlignment="Center"/>
				<TextBox Name="TbLastName" Padding="3" Background="#1C4857" BorderThickness="0" Foreground="White" FontSize="16" />

			</StackPanel>

			<StackPanel Grid.Column="2" Margin="10 5">

				<TextBlock Text="Residence: " VerticalAlignment="Center"/>
				<TextBox Name="TbResidence" Padding="3" Background="#1C4857" BorderThickness="0" Foreground="White" FontSize="16" />

			</StackPanel>

			<StackPanel Grid.Row="1" Grid.Column="0">
				<TextBlock Text="Department: "/>
				<ComboBox Name="CbDepartment"
						  Style="{StaticResource ComboBoxFlatStyle}"
						  DisplayMemberPath="Department"
						  SelectedValuePath="ID" />
			</StackPanel>

			<StackPanel Grid.Row="1" Grid.Column="1">
				<TextBlock Text="Date of birth: "/>
				<DatePicker Name="DpDateOfBirth"/>
			</StackPanel>

		</Grid>

		<Button Name="BtnSubmit" Grid.Row="2" Margin="5" HorizontalAlignment="Center" Content="Submit" Click="BtnSubmit_Click" Cursor="Hand"/>

	</Grid>
</UserControl>
