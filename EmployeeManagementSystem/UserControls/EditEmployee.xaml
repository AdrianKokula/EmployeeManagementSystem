<UserControl x:Class="EmployeeManagementSystem.UserControls.EditEmployee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeeManagementSystem.UserControls"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

		<StackPanel Margin="5" HorizontalAlignment="Center">

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="First name: "/>
				<TextBox Name="TbFirstName" Width="200"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Last name: "/>
				<TextBox Name="TbLastName" Width="200"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Department: "/>
				<ComboBox Name="CbDepartment"
						  DisplayMemberPath="Department"
						  SelectedValuePath="ID"
						  Width="200"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Date of birth: "/>
				<DatePicker Name="DpDateOfBirth" Width="200"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="Residence: "/>
				<TextBox Name="TbResidence" Width="200"/>
			</StackPanel>

			<Button Name="BtnSubmit" Content="Submit" Click="BtnSubmit_Click"/>

		</StackPanel>

	</Grid>
</UserControl>
