<Window x:Class="EmployeeManagementSystem.LoginWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:EmployeeManagementSystem"
		mc:Ignorable="d" FontSize="20" FontFamily="Bahnschrift Light" WindowStartupLocation="CenterScreen" Foreground="White"
		Title="EMS - Login" Height="600" Width="450" ResizeMode="NoResize">
	<Grid Background="#013243">

		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		
		<Image Grid.Row="0" Source="Resources/Logo.ico" MaxHeight="64" Margin="0 30 0 0"/>

		<TextBlock Grid.Row="1" Text="Sing in" HorizontalAlignment="Center" FontSize="36" Margin="0 10"/>

		<TextBlock Grid.Row="2" Text="Sign in and start managing your company!" HorizontalAlignment="Center" FontSize="16" Margin="0 5"/>

		<StackPanel Grid.Row="3" Margin="40 20">

			<!-- Password input -->
			<DockPanel HorizontalAlignment="Stretch" LastChildFill="True" Margin="0 15">
				<Image Source="Resources/Email.png" Margin="10 5" MaxHeight="24"/>

				<TextBox Width="auto" VerticalAlignment="Center" Name="TbEmail" Padding="10 9" Background="#1C4857" BorderThickness="0" Foreground="White" FontSize="16">
					<TextBox.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="6" />
						</Style>
					</TextBox.Resources>
				</TextBox>

			</DockPanel>

			<!-- Password input -->
			<DockPanel HorizontalAlignment="Stretch" LastChildFill="True" Margin="0 15 0 25">
				<Image Source="Resources/Password.png" Margin="10 5" MaxHeight="24"/>

				<PasswordBox VerticalAlignment="Center" Name="PbPassword" Background="#1C4857" BorderThickness="0" Foreground="White" FontSize="16" Padding="10 9">
					<PasswordBox.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="6" />
						</Style>
					</PasswordBox.Resources>
				</PasswordBox>

			</DockPanel>

			<CheckBox Margin="45 0 0 30" Background="#1C4857" BorderThickness="0" Foreground="White" VerticalAlignment="Center" FontSize="15" Name="CbRememberMail" IsChecked="True">
				<CheckBox.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="3" />
					</Style>
				</CheckBox.Resources>
				<TextBlock Text="Remember email" VerticalAlignment="Center"/>
			</CheckBox>

			<Button Content="Login" Name="BtnLogin" Click="BtnLogin_Click" Background="#FFAA4D" Cursor="Hand" FontWeight="Bold" Padding="5 10" Foreground="White">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="6" />
					</Style>
				</Button.Resources>
			</Button>

		</StackPanel>

		<StackPanel Grid.Row="4" VerticalAlignment="Bottom" Margin="10">
			<TextBlock Text="License: The MIT License (MIT)" FontSize="14" HorizontalAlignment="Center"/>
			<TextBlock Text="Copyright (c) 2021 Adrián Kokuľa - adriankokula.eu" FontSize="14" HorizontalAlignment="Center"/>
		</StackPanel>

	</Grid>
</Window>
