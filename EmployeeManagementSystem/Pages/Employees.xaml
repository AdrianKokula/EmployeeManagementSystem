		<StackPanel>

			<TextBlock Text="Filters" Foreground="#B4B7C0" FontSize="14" Margin="0 0 0 0"/>

			<Grid>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
					<ColumnDefinition Width="1*" />
				</Grid.ColumnDefinitions>

				<StackPanel Grid.Column="0" Margin="10 5">

					<TextBlock Text="First name: " VerticalAlignment="Center"/>
					<TextBox Name="TbFirstName"
							 Padding="10 5"
							 BorderThickness="0" FontSize="16"/>

				</StackPanel>

				<StackPanel Grid.Column="1" Margin="10 5">

					<TextBlock Text="Last name: " VerticalAlignment="Center"/>
					<TextBox Name="TbLastName"
							 Padding="10 5"
							 BorderThickness="0" FontSize="16"/>

				</StackPanel>

			</Grid>

		</StackPanel>

		<StackPanel Grid.Row="1">
			
			<TextBlock Text="Data" Foreground="#B4B7C0" FontSize="14" Margin="0 0 0 0"/>

			<ListView Grid.Row="1" Name="LvEmployees" BorderThickness="3" Padding="10 0"
				SelectionChanged="LvEmployees_SelectionChanged" Foreground="#51507A">

				<ListView.ItemContainerStyle>
					<Style TargetType="{x:Type ListViewItem}" >
						<Setter Property="Height" Value="48" />
						<Setter Property="Margin" Value="0 0" />
						<Setter Property="Cursor" Value="Hand" />
					</Style>
				</ListView.ItemContainerStyle>

				<ListView.View>
					<GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnsStyle}">
						<GridViewColumn Header="Id" Width="0" DisplayMemberBinding="{Binding ID}" />
						<GridViewColumn Header="First name" Width="150" DisplayMemberBinding="{Binding FirstName}" />
						<GridViewColumn Header="Last name" Width="150" DisplayMemberBinding="{Binding LastName}" />
						<GridViewColumn Header="Department" Width="200" DisplayMemberBinding="{Binding Department}" />
						<GridViewColumn Header="Date of birth" DisplayMemberBinding="{Binding DateOfBirth}" />
						<GridViewColumn Header="Residence" DisplayMemberBinding="{Binding Residence}"/>
					</GridView>
				</ListView.View>

			</ListView>
			
		</StackPanel>
		
		<controls:EditEmployee x:Name="EditEmp" Grid.Row="2"/>
		
	</Grid>

