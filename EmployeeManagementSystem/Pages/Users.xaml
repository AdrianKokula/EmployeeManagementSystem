<Page x:Class="EmployeeManagementSystem.Pages.Users"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EmployeeManagementSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="Users">

    <Grid>
		
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Center" Text="Users" />

		<ListView Grid.Row="1" Name="LvUsers">

			<ListView.View>
				<GridView>
					<GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" />
					<GridViewColumn Header="Department name" DisplayMemberBinding="{Binding Name}" />
					<GridViewColumn Header="State" DisplayMemberBinding="{Binding Email}" />
				</GridView>
			</ListView.View>

		</ListView>
		
	</Grid>
</Page>
